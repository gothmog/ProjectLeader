@model IList<ProjectLeader.Classes.Attachment>

<div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#images">Fotky</a>
                    
        </li>
        <li><a data-toggle="tab" href="#docs">Dokumenty</a></li>
    </ul>

    <div class="tab-content">
        <div id="images" class="tab-pane fade in active" style="padding:10px">
                @foreach (ProjectLeader.Classes.Attachment att in Model.Where(x => x.AttachmentType == ProjectLeader.Classes.Enums.AttachmentType.Image))
                {
                    <a style="margin:5px;width:140px;height:100px" href="~/TaskResources/@att.Name" target="_blank"><img height="100" width="140" src="~/TaskResources/@att.Name" /></a>
                }
        </div>
        <div id="docs" class="tab-pane fade" style="padding:10px">
            @foreach (ProjectLeader.Classes.Attachment att in Model.Where(x => x.AttachmentType != ProjectLeader.Classes.Enums.AttachmentType.Image))
            {
                <p><a href="~/TaskResources/@att.Name" target="_blank"><span class="glyphicon glyphicon-file"></span>@att.Name</a></p>
            }
        </div>
        
    </div>
</div>
