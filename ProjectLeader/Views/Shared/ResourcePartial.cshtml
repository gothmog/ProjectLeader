@model ProjectLeader.Classes.Resource

    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model._id)
        @Html.HiddenFor(model => model.ParentTaskIdString)

        <div class="form-group">
            @Html.LabelFor(model => model.ResourceName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ResourceName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResourceName, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="image_class_hornbach" style="display:none">
                <img id="image_hornbach" alt="@Model.ResourceName" src="@Model.ResourceImageUrl" />
                @Html.HiddenFor(model=> model.ResourceImageUrl)
            </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ResourcePrice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ResourcePrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResourcePrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ResourceCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ResourceCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ResourceCount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Hornbach url", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.Editor("hornbachUrl", new { @class = "control-label col-md-6" })
            </div>
            <div class="col-md-2">
                <button type="button" class='btn btn-warning btn-nav' onclick="GetResource();"><span class='glyphicon glyphicon-question-sign'></span>&nbsp;Najít v Hornbachu</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type='submit' class='btn btn-success btn-nav'><span class='glyphicon glyphicon-save'></span>&nbsp;Uložit zdroj</button>
            </div>
        </div>
    </div>
