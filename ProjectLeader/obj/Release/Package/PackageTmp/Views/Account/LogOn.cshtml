@model ProjectLeader.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="row" style="color:black; height:220px">
    <div class="col-md-12">

    </div>

</div>
<div class="row" style="color:black;min-height:450px">
    <div class="col-md-6">

    </div>
    <div class="col-md-6 textWindow">
        <h2>Přihlášení</h2>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <fieldset>

                <div class="editor-label">
                    @Html.LabelFor(model => model.LoginName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.LoginName)
                    @Html.ValidationMessageFor(model => model.LoginName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Password)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <p>
                    <input type="submit" value="Login" class="btn btn-default" />
                    <input type="button" value="Zpět" class="btn btn-default" onclick="window.location='/Marduk/Index'" />
                </p>
            </fieldset>
        }
        
</div></div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
